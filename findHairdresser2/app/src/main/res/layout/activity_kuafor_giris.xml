<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kuaforGiris">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="71dp"
        android:onClick="singInClicked" android:text="Giriş Yap"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="64dp"
        android:layout_marginEnd="100dp" android:onClick="singUpClicked"
        android:text="Kayıt Ol"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"/>
    <EditText
        android:id="@+id/userEmailText"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="92dp"
        android:ems="10"
        android:hint="Kullanıcı Email" android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/passwordText"
        app:layout_constraintEnd_toEndOf="@+id/passwordText" app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
    />
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="236dp"
        android:layout_height="61dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="183dp"
        android:ems="10" android:hint="Şifre"
        android:inputType="textPersonName" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>